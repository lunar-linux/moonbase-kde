          MODULE=ktouch
         VERSION=18.04.2
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$KDE_URL/stable/applications/$VERSION/src
      SOURCE_VFY=sha256:5018c75a262e13ed4f0c6fcc7a346e93ef423c4af930b7c49c8241448fa82674
   MODULE_PREFIX=${KDE4_INSTALL_DIR:-/usr}
        WEB_SITE=http://KTouch.sourceforge.net
         ENTERED=20110813
         UPDATED=20180623
           SHORT="touch typing education training"

cat << EOF
A education program to learn to touch-type. It provieds
a training text, and shows the user how to place their
fingers on the keyboard. It also shows the user which finger
to move to press the next key. It automatically adjusts to
different levels depending on the speed. It has support
for different keyboard layouts(languages).
EOF
