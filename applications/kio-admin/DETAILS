          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$KDE_URL/stable/release-service/$VERSION/src/
      SOURCE_VFY=sha256:61bb26b9c35dd23d189da805ece96174a44323a52622a9d5c6224ad5bc8d5b14
