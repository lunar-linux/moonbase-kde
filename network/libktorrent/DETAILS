          MODULE=libktorrent
         VERSION=2.0.1
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$KDE_URL/stable/ktorrent/$(module_version ktorrent | cut -c 1-3)
   MODULE_PREFIX=${KDE4_INSTALL_DIR:-/usr}
      SOURCE_VFY=sha256:c70d9ee11a1ac95145284e2ab9aec689df21b7462f389389b8d54f892a273f42
