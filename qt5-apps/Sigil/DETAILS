          MODULE=Sigil
         VERSION=0.9.6
          SOURCE=$MODULE-$VERSION-Code.zip
      SOURCE_URL=https://github.com/user-none/Sigil/releases/download/${VERSION}
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   MODULE_PREFIX=${QT5_PREFIX:-/usr}
      SOURCE_VFY=sha256:7856ad20116ef13fc3f79fa01c1d65c8b15ce1047f1e88b0723c2658cd8f18fd
